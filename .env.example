# Server Configuration
PORT=5000

# Database Configuration
DATABASE_URL=your_database_url_here
PGHOST=your_postgres_host
PGPORT=5432
PGUSER=your_postgres_user
PGPASSWORD=your_postgres_password
PGDATABASE=your_database_name

# Environment
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=false

# Database Connection Performance Settings
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=60000
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1000
DB_MAX_CONCURRENT_CONNECTIONS=10

# Verification Performance Settings
VERIFICATION_MAX_CONCURRENT_TABLES=5
VERIFICATION_TABLE_BATCH_SIZE=10
VERIFICATION_SAMPLE_DATA_SIZE=5
VERIFICATION_PROCESSING_TIMEOUT=30000
VERIFICATION_ENABLE_PARALLEL=true

# File Upload Settings
FILE_UPLOAD_MAX_SIZE=104857600
FILE_UPLOAD_ALLOWED_EXTENSIONS=.db,.sqlite,.sqlite3
FILE_UPLOAD_TIMEOUT=30000
TEMP_FILE_CLEANUP_INTERVAL=3600000
TEMP_FILE_RETENTION_HOURS=24